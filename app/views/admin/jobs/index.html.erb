<div class="col-md-12">

  <table class="table">

    <h2 class="text-center"> 我发表过的职位 </h2>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td> <%= link_to(job.title, job_path(job)) %> </td>
          <td>
              <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-default")%>
              <%= link_to("Destroy", job_path(job),   class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
          <td> <%= job.updated_at %> </td>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
